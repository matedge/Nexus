<div id="content-main">
    <div id="centered top"></div>
    <h1>All
        <%= 'My ' if params[:action] == 'mine'%>Images</h1>
    <div id="links">
        <% @images.each do |image| %>

        <%= link_to '', image_path(image), :data => {:gallery => true, :image => cloudinary_url(image.url), :id => image.id}, :class => 'gallery-link', :style => "background-image: url(#{ cl_image_path image.url })" %>
        <% end %>

    </div>

    <button id='preview-gallery' class="btn btn-primary btn-lg">
        Preview Gallery</button>
    <button id='create-gallery' class="btn btn-primary btn-lg">
        Create Gallery</button>
</div>
</div>
